@page "/Ventana/Login"
<h3>Login</h3>
<style>
    .btn-iniciar {
        background-color: #00b4d8;
        color: #fff;
    }

    .btn-registro {
        background-color: #ADE8F4;
        color: #fff;
    }

    .form-control {
        border: none;
        border-bottom: 1px solid #ced4da;
        border-radius: 0;
        padding: 0;
        background-color: transparent;
    }

        .form-control:focus {
            outline: none;
            border-color: transparent !important;
        }
</style>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="row">
                    <div class="col-sm-6 bg-custom rounded-left">
                        <div class="card" style="background-color: #ADE8F4;">
                            <div class="card-body">
                                <img src="Imagenes/login.png" alt="Descripción de la imagen" class="d-block mx-auto" style="width: 200px; margin-top: 20px;">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 rounded-right">
                        <div class="card-body">
                            <div class="d-flex justify-content-center">
                                <div>
                                    <div class="form-group mb-2">
                                        <input type="text" class="form-control" id="usuario" placeholder="Ingrese su usuario">
                                    </div>
                                    <div class="form-group mb-3">
                                        <input type="password" class="form-control" id="contrasena" placeholder="Ingrese su contraseña">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group text-center mb-3">
                                <button type="button" class="btn btn-block btn-iniciar">Iniciar Sesión</button>
                            </div>
                            <div class="form-group text-center">
                                <button type="button" class="btn btn-block btn-registro">Registrarse</button>
                            </div>
                            <div class="form-group text-center">
                                <label class="mt-4">¿Olvidó su contraseña?</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

